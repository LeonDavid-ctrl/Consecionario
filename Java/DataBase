CREATE DATABASE Concesionario;
USE Concesionario;

CREATE TABLE Clientes (
    ID_Cliente INT PRIMARY KEY,
    Nombre VARCHAR(100) NOT NULL,
    Telefono VARCHAR(15),
    Correo VARCHAR(100)
);

CREATE TABLE Carros (
    ID_Carro INT PRIMARY KEY,
    Marca VARCHAR(50) NOT NULL,
    Modelo VARCHAR(50) NOT NULL,
    A単o INT NOT NULL,
    Precio INT NOT NULL,
);

CREATE TABLE Empleados (
    ID_Empleado INT PRIMARY KEY,
    Nombre VARCHAR(100) NOT NULL,
    Cargo VARCHAR(50),
    Telefono VARCHAR(15)
);

CREATE TABLE Ventas (
    ID_Venta INT PRIMARY KEY,
    Fecha DATE NOT NULL,
    ID_Carro INT NOT NULL,
    ID_Cliente INT NOT NULL,
    ID_Empleado INT NOT NULL,
    FOREIGN KEY (ID_Carro) REFERENCES Carros(ID_Carro),
    FOREIGN KEY (ID_Cliente) REFERENCES Clientes(ID_Cliente),
    FOREIGN KEY (ID_Empleado) REFERENCES Empleados(ID_Empleado)
);

CREATE TABLE Servicios (
    ID_Servicio INT PRIMARY KEY,
    ID_Carro INT NOT NULL,
    Fecha DATE NOT NULL,
    Descripcion VARCHAR(50),
    Costo INT ,
    FOREIGN KEY (ID_Carro) REFERENCES Carros(ID_Carro)
);

--Funcion de clientes 
CREATE PROCEDURE sp_Consecionario_Cliente
@id_Cliente int,
@nombre VARCHAR(100),
@telefono VARCHAR(15),
@correo VARCHAR(100)

AS
BEGIN

	INSERT INTO Clientes(ID_Cliente,Nombre,Telefono,Correo)
	VALUES (@Id_Cliente,@Nombre,@Telefono,@Correo)	
END
-- Funciones de Carros
CREATE PROCEDURE sp_Consecionario_Carros
@id_Carro INT,
@marca VARCHAR(50),
@modelo VARCHAR(50),
@a単o INT,
@precio INT

AS
BEGIN

	INSERT INTO Carros(ID_Carro,Marca,Modelo,A単o,Precio)
	VALUES (@Id_Carro,@Marca,@Modelo,@A単o,@Precio)	
END


--Funciones de Empleados
CREATE PROCEDURE sp_Consecionario_Empleados
@id_Empleados INT,
@nombre VARCHAR(100),
@cargo VARCHAR(100),
@telefono VARCHAR

AS
BEGIN

	INSERT INTO Empleado(ID_Empleados,Nombre,Cargo,Telefono)
	VALUES (@id_Empleados,@Nombre,@Cargo,@Telefono)	
END

--Funcion de ventas
CREATE PROCEDURE sp_Consecionario_Ventas
@id_Ventas int,
@fecha DATE

AS
BEGIN

	INSERT INTO Venta(ID_Venta,Fecha)
	VALUES (@Id_Ventas,@Fecha)	
END

--Funcion de Servicios
CREATE PROCEDURE sp_Consecionario_Servicios
@id_Servicios int,
@fecha DATE,
@descripcion VARCHAR(50),
@costo INT
AS
BEGIN

	INSERT INTO Servicios(ID_Servicio,Fecha,Descripcion,Costo)
	VALUES (@id_Servicios,@Fecha,@Descripcion,@Costo)	
END
